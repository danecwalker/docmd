{{- define "base" -}}

{{- $theme := .Theme -}}
{{- $page := .Page -}}
{{- $title := .Page.Title -}}
{{- $description := .Page.Description -}}
{{- $content := .Content -}}
{{- $sidebar := .Sidebar -}}
{{- $sidebarGroups := .SidebarGroups -}}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{$title}}</title>
  <meta name="description" content="{{$description}}">

  <style>
    {{- $theme -}}    
  </style>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/markdown.css" />
  <script src="/copy.js" defer></script>
</head>

<body>
  <div class="container">
    <header class="header">
      <div class="logo">
        <a href="/">
          {{if $page.C.LogoPath -}}
          <img src="{{$page.C.LogoPath}}" alt="{{$page.C.Title}}">
          {{- else -}}
          <h1>{{$page.C.Title}}</h1>
          {{- end -}}
        </a>
      </div>
      <!-- <div class="search">
        <input type="text" placeholder="Search">
      </div> -->
      <div>
      </div>
    </header>
    <div class="content">
      <div class="sidebar">
        <ul>
          {{range $i, $group := $sidebarGroups -}}
          <li class="nav-section-heading font-bold px-4 pb-2">{{capitalize $group}}</li>
          {{range $i, $item := index $sidebar $group -}}
          <li class="nav-section-link">
            <a href="{{$item.Url}}">
              <div {{ if eq $item.Url $page.Url -}}id="current" {{- end }}>
                {{$item.Title}}</div>
            </a>
          </li>
          {{ end -}}
          {{- end -}}
        </ul>
      </div>
      <div class="main">
        <main class="md">
          {{$content}}
        </main>
      </div>
    </div>
  </div>
</body>

</html>
{{- end -}}